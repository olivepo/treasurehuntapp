<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstTableLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">


    <TableRow
        android:id="@+id/TableRow01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step id: "></TextView>

        <EditText
            android:id="@+id/txtStepId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step latitude: "></TextView>

        <EditText
            android:id="@+id/txtStepLat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step longitude: "></TextView>

        <EditText
            android:id="@+id/txtStepLong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step max duration: "></TextView>

        <EditText
            android:id="@+id/txtStepMaxDur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step max duration: "></TextView>

        <EditText
            android:id="@+id/txtStepScoreGiven"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step description: "></TextView>

        <EditText
            android:id="@+id/txtStepDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow07"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riddle text: "></TextView>

        <EditText
            android:id="@+id/txtRidlleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow08"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riddle joker text: "></TextView>

        <EditText
            android:id="@+id/txtRidlleJokerText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>


    </TableRow>

    <TableRow
        android:id="@+id/TableRow09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/TextView09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="isMCQ: "></TextView>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />


    </TableRow>


    <TableRow
        android:id="@+id/TableRow10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riddle Answer: "></TextView>

        <EditText
            android:id="@+id/txtRidlleAnswerOne"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>

        <CheckBox
            android:id="@+id/checkBoxAnswerOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />


    </TableRow>

    <TableRow
        android:id="@+id/TableRow11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/TextView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riddle Answer: "></TextView>

        <EditText
            android:id="@+id/txtRidlleAnswerTwo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""></EditText>

        <CheckBox
            android:id="@+id/checkBoxAnswerTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />


    </TableRow>


    <TableRow
        android:id="@+id/TableRow12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/nextStepButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="20dp"
            android:onClick="nextStep"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:text="next step" />

        <Button
            android:id="@+id/nextStepSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="20dp"
            android:onClick="submit"
            android:padding="10dp"
            android:paddingRight="10dp"
            android:text="submit" />
    </TableRow>

</TableLayout>